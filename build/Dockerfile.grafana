FROM splatform/stratos-bk-base:opensuse as cf-dashboards 


RUN git clone https://github.com/bosh-prometheus/prometheus-boshrelease.git

FROM grafana/grafana:6.2.0

USER root
ADD apply-grafana-mods.sh /apply-grafana-mods.sh
RUN /apply-grafana-mods.sh

# Copy dashboards
MKDIR -p /var/lib/grafana/dashboards
COPY --from=cf-dashboards /src/prometheus-boshrelease/jobs/cloudfoundry_dashboards/templates/* /var/lib/grafana/dashboards/

USER grafana